<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.projekttest.gospodin.bluetooth_remote_car.bluetooth.BT_ListView_Fragment">

    <!-- TODO: Update blank fragment layout -->


    <ListView
        android:id="@+id/lista_uredajaView"
        android:layout_width="match_parent"
        android:layout_height="196dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutZaBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:id="@+id/btnScan"
            android:layout_width="169dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/scan"
            android:textOff="@string/Scan_for_devices"
            android:textOn="@string/scanning"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>
